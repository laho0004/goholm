---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="Contact">
  <!-- Samme setup som About: ekstra py-80 + centeret container -->
  <section class="py-80">
    <div class="max-w-[960px] mx-auto">
      
      <!-- INTRO TEKST -->
      <section class="max-w-md mb-24">
        <h2 class="tracking-[0.25em] mb-8">
          Contact us
        </h2>

        <p class="leading-relaxed">
          Would you like to know more? Your questions are more than welcome.
          Please feel free to email us at Göholm@.dk, contact us on
          +45 31 39 30 51 or fill in the form below and we will get back to you
          as quickly as we can.
        </p>
      </section>

      <!-- FORMULAR -->
      <form class="max-w-xl mb-40">
        <!-- NAME + PHONE -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-24 gap-y-10 mb-10">
          <div>
            <label
              for="name"
              class="block uppercase text-[10px] tracking-[0.25em] mb-4"
            >
              Name
            </label>
            <input
              id="name"
              type="text"
              class="w-full border-b border-[0.5px] border-manor-red-500 bg-transparent py-2 text-[12px] focus:outline-none"
            />
          </div>

          <div>
            <label
              for="phone"
              class="block uppercase text-[10px] tracking-[0.25em] mb-4"
            >
              Phone
            </label>
            <input
              id="phone"
              type="text"
              class="w-full border-b border-[0.5px] border-manor-red-500 bg-transparent py-2 text-[12px] focus:outline-none"
            />
          </div>
        </div>

        <!-- EMAIL -->
        <div class="mb-10 max-w-md">
          <label
            for="mail"
            class="block uppercase text-[10px] tracking-[0.25em] mb-4"
          >
            Email*
          </label>
          <input
            id="mail"
            type="email"
            class="w-full border-b border-[0.5px] border-manor-red-500 bg-transparent py-2 text-[12px] focus:outline-none"
          />
        </div>

        <!-- MESSAGE -->
        <div class="mb-12">
          <label
            for="message"
            class="block uppercase text-[10px] tracking-[0.25em] mb-4"
          >
            Message*
          </label>
          <textarea
            id="message"
            rows="3"
            class="w-full border-b border-[0.5px] border-manor-red-500 bg-transparent py-2 text-[12px] resize-none focus:outline-none"
          ></textarea>
        </div>

        <!-- SUBMIT -->
        <div class="pt-4 flex justify-center">
          <Button />
        </div>
      </form>

      <!-- DIRECTIONS -->
      <section class="max-w-md">
        <h2 class="tracking-[0.25em] mb-8">
          Directions
        </h2>

        <p class="leading-relaxed mb-2">
          We are located 10 km south of Ronneby in Blekinge County. Göholm is
          strategically situated on the Gö Peninsula along the Blekinge coast.
        </p>

        <Link
          title="CLICK HERE FOR DIRECTIONS"
          href="https://www.google.com/maps/place/G%C3%B6holms+House,+372+94+Listerby,+Sverige/@56.1533277,15.3286061,17z"
        />
      </section>

    </div>
  </section>
</MainLayout>




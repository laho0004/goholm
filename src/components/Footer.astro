---
import "../styles/tailwind.css";
---

<footer class="bg-linen-500 text-manor-red-500 w-full border-t border-manor-red-500 pt-16 pb-16">
  <div class="max-w-screen-xl mx-auto px-6 md:px-8">

    <!-- Desktop Layout -->
    <div class="hidden md:flex justify-between items-end tracking-[0.15em]">

      <div class="uppercase font-[baskerville]">
        <a href="#" class="underline hover:opacity-60 transition">
          Spotify
        </a>
      </div>

      <div class="text-center tracking-[0]">
        <p class="tracking-[0.15em]">
          Göholm House
        </p>
        <p>
          372 94 Listerby, Sverige
        </p>
      </div>

      <div class="uppercase font-[baskerville]">
        <a href="#" class="underline hover:opacity-60 transition">
          LinkedIn
        </a>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="md:hidden flex justify-between items-start mt-8">

      <!-- Left column: links stacked -->
      <div class="flex flex-col space-y-4 text-[14px] tracking-[0.15em] uppercase font-[baskerville]">
        <a href="#" class="underline hover:opacity-60 transition">
          Spotify
        </a>
        <a href="#" class="underline hover:opacity-60 transition">
          LinkedIn
        </a>
      </div>

      <!-- Right column: address -->
      <div class="text-right text-[14px] tracking-[0] font-light">
        <p class="uppercase font-[baskerville] tracking-[0.15em]">
          Göholm House
        </p>
        <p>
          372 94 Listerby, Sverige
        </p>
      </div>
    </div>

  </div>
</footer>
